.container {
    width: 100%;
    height: 100%;
    background: white;
}

.item-group {
    display: flex;
    height: 15rem;
    margin-bottom: 0.5rem;
}

.video-item {
    flex: 1;
    margin: 0.1rem;
    text-align: center;
    width: 9.7rem;
    height: 15rem;
    border: 0.1rem solid #ebebeb;
    position:relative;
}

.video-image {
    text-align: center;
    width: 9.7rem;
    height: 13.5rem;
}

.play-image {
    height: 3rem;
    width: 3rem;
    position:absolute;
    z-index: 2;
    top: 5.5rem;
    left: 3.8rem;
}

.video-title {
    position: absolute;
    color: #333;
    width: 9.7rem;
    top: 13.7rem;
    left: 0.1rem;
    font-size: 0.8rem;
}

.loading{
    width: 100%;
    text-align: center;
}

.loading image {
    width: 0.9rem;
    height: 0.9rem;
}
