.container {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
}

.container video {
    width: 100%;
    height: 15rem;
    background: black;
}

.comment {
	background: white;
	height: auto;
	margin-top: 1rem;
}

.list{
    padding: 20px;
}
.item{
    display: flex;
    margin-bottom: 20px;
}
.item.first-child{
    border-bottom: #eee 1px solid;
    padding-bottom: 15px;
    margin-bottom: 30px;
}
.photo{
    display: inline-block;
    width:45px;
    height: 45px;
    border: #eee 1px solid;
}
.photo image{
    display: block;
    width: 100%;
    height: 100%;
}
.content{
    flex: 1;
    padding-left: 20px;
    font-size: 14px;
    text-align: left;
}
.input{
    box-sizing: border-box;
    border: #eee 1px solid;
    width: 100%;
    height: 45px;
    font-size: 14px;
    padding:0 10px;
}
.top{
    color: #666;
    display: block;
    margin-bottom: 10px;
}
.text{
    color: #333;
    display: block;
    margin-bottom: 10px;
}
.bottom{
    color: #999;
    font-size: 12px;
    display: block;
}

.button{
    margin-top:10px;
    width: 120px;
    height: 35px;
    font-size: 12px;
    line-height: 35px;
}
